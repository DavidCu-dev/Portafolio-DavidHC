---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
import GitHubIcon from "../components/icons/GitHubIcon.astro";
import LinkedInIcon from "../components/icons/LinkedInIcon.astro";
import SocialPill from "../components/SocialPill.astro";
import MailIcon from "../components/icons/MailIcon.astro";
import Experience from '../components/Experience.astro';
import SectionContenedor from '../components/SectionContenedor.astro';
import BriefCaseIcon from "../components/icons/BriefCaseIcon.astro";
---

<Layout>
	<main class="px-4">
		<SectionContenedor class="py-44 pb-22">
		<h1 
			class="text-white text-2xl md:text-4xl lg:text-4xl font-bold justify-center flex flex-row gap-x-4 pb-2 lg:pb-6">
			Hola, soy David Hernández Cuevas 
		</h1> 
		<div class="flex justify-center-safe py-4 items-center">
			<Badge>Web Developer</Badge> 
			<Badge>Frontend Developer</Badge>  
			<Badge>Disponible para trabajar</Badge>
		</div>
		<h2 class="text-xl lg:text-2xl opacity-80 py-2 text-pretty max-w-[700px]">
			Soy un Ingeniero en Tecnologías de la Información, con experiencia desarrollando aplicaciones web y dando mantenimiento de paginas web. Me apasiona aprender nuevas tecnologías y mejorar mis habilidades en programación. Actualmente, estoy buscando oportunidades para aplicar mis conocimientos y seguir creciendo profesionalmente.
		</h2>

		<nav class="flex gap-4 mt-6 flex-wrap">
			<SocialPill href="">
				<LinkedInIcon class="size-4 lg:size-6" />
				LinkedIn
			</SocialPill>
			<SocialPill href="https://github.com/DavidCu-dev">
				<GitHubIcon class="size-4 lg:size-6" />
				GitHub
			</SocialPill>
			<SocialPill href="mailto:davidhcuevas01@gmail.com">
				<MailIcon class="size-4 lg:size-6" />
				davidhcuevas01@gmail.com
			</SocialPill>
		</nav>
	</SectionContenedor>
	<SectionContenedor id="experiencia">
		<h2 class="text-4xl text-white font-bold pb-6 si flex items-center gap-x-3">
			<BriefCaseIcon class="inline size-8" />
			Experiencia Profesional
		</h2>
		<Experience />
	</SectionContenedor>
	</main>
</Layout>
